<div class="fields-page">
{{#each fields}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-12">
      <img src="{{this.photo}}" class="card-img" alt="court-pic">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.location}}</p>
        <p class="card-text"><small class="text-muted">Rating: {{this.rating}}</small></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>