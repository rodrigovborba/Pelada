<div>
    <div class="create-button">
        <div class="row my-2">
            <div class="col-lg-8 order-lg-2">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Created</a>
                    </li>

                    <li class="nav-item" id="show">
                        <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Joined</a>
                    </li>
                </ul>
                <div class="tab-content py-4">
                    <div class="tab-pane active" id="profile">
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            {{!-- Field Information --}}
                            <div class="col-md-12">
                                <div>
                                    <table class="table table-striped text-center">
                                        <thead>
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Players Number</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Time</th>
                                                <th scope="col">#</th>
                                                <th scope="col">#</th>
                                            </tr>
                                        </thead>
                                        {{!-- {{joinedgames}} --}}
                                        {{#each mygames}}
                                        <tbody id="myTable">
                                            <tr class="table table-striped">
                                                <td>{{groupName}}</td>
                                                <td>{{numberOfPlayers}}</td>
                                                <td>{{dayOfPlay}}</td>
                                                <td>{{time}}</td>
                                                <td><a href="/singlegame/{{_id}}"
                                                        class="btn btn-info button-to-info-games">Info</a>
                                                </td>
                                                <td>
                                                    <form action="/deletegame/{{id}}" method="POST">
                                                        <button class="btn btn-outline-danger">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        </tbody>
                                        {{/each}}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="edit">
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            {{!-- Field Information --}}
                            <div class="col-md-12">
                                <div>
                                    <table class="table table-striped text-center">
                                        <thead>
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Players Number</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Time</th>
                                                <th scope="col">#</th>
                                            </tr>
                                        </thead>
                                        {{#each game}}
                                        {{#each this.players}}
                                        {{#notEqual this.username ../../user.username}}
                                        <tbody id="myTable">
                                            <tr class="table table-striped">
                                                <td>{{../this.groupName}}</td>
                                                <td>{{../this.numberOfPlayers}}</td>
                                                <td>{{../this.dayOfPlay}}</td>
                                                <td>{{../this.time}}</td>
                                                <td>
                                                    <form action="/user/{{id}}/delete" method="POST">
                                                        <button class="btn btn-outline-danger">Leave</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        </tbody>

                                        {{/notEqual}}
                                        {{/each}}
                                        {{/each}}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>